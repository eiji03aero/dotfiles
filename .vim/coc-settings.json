{
  "coc.preferences.jumpCommand": "edit",
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "javascript", "javascriptreact",
    "typescript", "typescriptreact", "typescript.tsx",
    "rust"
  ],

  "codeLens.enable": true,
  "suggest.fixInsertedWord": false,
  "signature.maxWindowHeight": 8,
  "snippets.userSnippetsDirectory": "~/dotfiles/.vim/coc/snippets",

  "prettier.requireConfig": true,
  "eslint.autoFixOnSave": false,
  "eslint.nodePath": "/opt/homebrew/Cellar/node@18/18.20.2/bin/node",

  "angular.trace.server": "verbose",
  "angular.log": "verbose",
  "angular.experimental-ivy": true,

  "go.goplsOptions.gofumpt": true,

  "rust-analyzer.lens.enable": false,

  "flutter.lsp.initialization.closingLabels": true,
  "flutter.provider.hot-reload": true,

  "solargraph.useBundler": true
}
