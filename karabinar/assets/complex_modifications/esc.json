{
  "title": "Esc",
  "rules": [
    {
      "description": "Ctrl + Shift + Spacebar",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": { "mandatory": [ "left_control", "left_shift" ] }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }
  ]
}
